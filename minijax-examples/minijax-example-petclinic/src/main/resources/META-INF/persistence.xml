<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
	<persistence-unit name="petclinic" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>com.example.model.Owner</class>
		<class>com.example.model.Pet</class>
		<class>com.example.model.Vet</class>
		<class>com.example.model.Visit</class>
		<class>org.minijax.db.InstantConverter</class>
		<class>org.minijax.db.UuidConverter</class>
		<properties>
            <property name="javax.persistence.jdbc.driver" value="org.h2.jdbcx.JdbcDataSource" />
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:~/.minijax-petclinic/database" />
			<property name="javax.persistence.schema-generation.database.action" value="create" />
			<property name="javax.persistence.sql-load-script-source" value="init.sql" />
		</properties>
	</persistence-unit>
</persistence>
