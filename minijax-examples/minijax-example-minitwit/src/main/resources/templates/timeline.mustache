{{<layout}}
{{$title}}Home{{/title}}
{{$content}}
{{#user}}
<form action="/addmessage" method="POST">
  <input type="hidden" name="csrf" value="{{csrf}}">
  <div class="input-group">
    <input type="text" name="text" class="form-control" placeholder="Say something..." required autofocus>
    <div class="input-group-append">
      <button class="btn btn-primary" type="button">Share</button>
    </div>
  </div>
</form>
<hr>
{{/user}}
{{#messages}}
<div class="message">
  <img src="{{user.gravatarUrl}}" class="avatar rounded-circle float-left">
  <strong><a href="/{{user.handle}}">{{user.handle}}</a></strong>
  {{text}}
  <div class="clearfix"></div>
</div>
{{/messages}}
{{/content}}
{{/layout}}