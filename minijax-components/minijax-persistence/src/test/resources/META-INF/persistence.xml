<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
    <persistence-unit name="testdb" transaction-type="RESOURCE_LOCAL">
        <provider>org.minijax.persistence.MinijaxPersistenceProvider</provider>
        <class>org.minijax.persistence.testmodel.Address</class>
        <class>org.minijax.persistence.testmodel.KitchenSink</class>
        <class>org.minijax.persistence.testmodel.Message</class>
        <class>org.minijax.persistence.testmodel.User</class>
        <class>org.minijax.persistence.testmodel.Widget</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.jdbcx.JdbcDataSource" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:test;DB_CLOSE_DELAY=-1" />
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create" />
            <property name="jakarta.persistence.sql-load-script-source" value="init.sql" />
        </properties>
    </persistence-unit>
</persistence>
