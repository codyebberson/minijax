<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
    <persistence-unit name="testdb" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>org.minijax.entity.InstantConverter</class>
        <class>org.minijax.entity.UuidConverter</class>
        <class>org.minijax.entity.test.Widget</class>
        <properties>
            <property name="eclipselink.session.customizer" value="org.minijax.data.EclipselinkSessionCustomizer" />
        </properties>
    </persistence-unit>
</persistence>
